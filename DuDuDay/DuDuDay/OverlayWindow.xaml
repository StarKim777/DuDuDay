<Window x:Class="DuDuDay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OverlayWindow" Height="300" Width="250"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <Border Background="#AA000000" CornerRadius="10" Padding="10" Margin="10">
        <StackPanel x:Name="DdayOverlayList" />
    </Border>
</Window>
