<Window x:Class="DuDuDay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DuDuDay"
        Height="500"
        Width="420"
        Background="#FFF8F8F8">

    <Window.Resources>
        <Style x:Key="SwitchToggleStyle" TargetType="CheckBox">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="SwitchBackground"
                                    Width="50"
                                    Height="25"
                                    CornerRadius="12.5"
                                    Background="#CCC"
                                    SnapsToDevicePixels="True"/>
                            <Ellipse x:Name="SwitchThumb"
                                     Width="21"
                                     Height="21"
                                     Fill="White"
                                     Margin="2"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBackground" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="SwitchBackground" Property="Background" Value="#AAA"/>
                                <Setter TargetName="SwitchThumb" Property="Fill" Value="#EEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="DdayList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="10"
                                Margin="6"
                                Padding="10"
                                BorderBrush="#DDD"
                                BorderThickness="1"
                                Background="{Binding BackgroundColor}">
                            <DockPanel VerticalAlignment="Center">
                                <StackPanel DockPanel.Dock="Left">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{Binding FontColor}"/>
                                    <TextBlock Text="{Binding Date, StringFormat=yyyy-MM-dd}"
                                               Foreground="{Binding FontColor}"
                                               FontSize="13"/>
                                </StackPanel>

                                <CheckBox DockPanel.Dock="Right"
                                          IsChecked="{Binding IsActive}"
                                          Style="{StaticResource SwitchToggleStyle}"
                                          Margin="10,0,0,0"
                                          Checked="ToggleActive"
                                          Unchecked="ToggleActive"/>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
